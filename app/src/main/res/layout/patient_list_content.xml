<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="2dp"
    android:clickable="true"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/view_main_header__avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:layout_marginHorizontal="16dp"
            android:src="@drawable/man"/>

        <TextView
            android:id="@+id/text_nombrePatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_main_header__avatar"
            android:text="Rafael PÃ©rez Aguirre"
            style="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27/10/2017 05:45:23"
            android:layout_toRightOf="@+id/view_main_header__avatar"
            android:layout_below="@id/text_nombrePatient"/>


        <TextView
            android:id="@+id/text_folio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:textColor="#000"
            android:text="PV2018-94-1"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>