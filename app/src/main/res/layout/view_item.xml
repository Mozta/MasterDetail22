<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/view_main_header__avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:src="@drawable/man"/>

    <TextView
        android:id="@+id/text_nombrePatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view_main_header__avatar"
        android:textColor="#000"
        android:text="Rafael PÃ©rez Aguirre"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_uuidPatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view_main_header__avatar"
        android:layout_below="@id/text_nombrePatient"
        android:textColor="#000"
        android:text="b00f6eab-ac33-4f90-b35d-8a56aa257d86"
        />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27/10/2017 05:45:23"
        android:layout_toRightOf="@+id/view_main_header__avatar"
        android:layout_below="@id/text_uuidPatient"/>


    <TextView
        android:id="@+id/text_folio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="#000"
        android:text="PV2018-94-1"
        android:textSize="22sp" />

</RelativeLayout>