<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_capturista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_main_header__avatar"
            android:text="Capturista: Rafael PÃ©rez Aguirre"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_uuidHistory"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_capturista"
            android:layout_toRightOf="@+id/view_main_header__avatar"
            android:text="b00f6eab-ac33-4f90-b35d-8a56aa257d86"
            android:textColor="#000" />

        <TextView
            android:id="@+id/text_date_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_uuidHistory"
            android:layout_toRightOf="@+id/view_main_header__avatar"
            android:text="27/10/2017 05:45:23" />


        <ImageButton
            android:id="@+id/btn_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_eye" />

    </RelativeLayout>

</android.support.v7.widget.CardView>