<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_capturista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_main_header__avatar"
            android:textColor="#000"
            android:text="Capturista: Rafael PÃ©rez Aguirre"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_uuidHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_main_header__avatar"
            android:layout_below="@id/text_capturista"
            android:textColor="#000"
            android:text="b00f6eab-ac33-4f90-b35d-8a56aa257d86" />

        <TextView
            android:id="@+id/text_date_history"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="27/10/2017 05:45:23"
            android:layout_toLeftOf="@+id/card_view"
            android:layout_marginRight="24dp"
            android:textSize="18sp"
            android:gravity="center_vertical" />
        

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            card_view:cardCornerRadius="30dp"
            card_view:cardElevation="-1dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/btn_view"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"

                android:src="@drawable/ic_eye"/>
        </android.support.v7.widget.CardView>


    </RelativeLayout>

</android.support.v7.widget.CardView>